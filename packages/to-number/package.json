{
  "name": "@thinice/to-number",
  "version": "0.1.0",
  "description": "Converts values to numbers (null/undefined → 0, true → 1, false → 0, else Number(x))",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thinicejs/utils.git",
    "directory": "packages/to-number"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "node --import tsx --test src/index.test.ts",
    "lint": "node -e \"process.exit(0)\""
  },
  "dependencies": {
    "@thinice/is-nullish": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "homepage": "https://github.com/thinicejs/utils/tree/main/packages/to-number"
}
